{
  "name": "link-blog",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "scripts": {
    "setup": "node scripts/setup.js",
    "dev": "vite",
    "dev:save": "node scripts/dev-with-save.cjs",
    "api": "node server.cjs",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint ./src",
    "format": "prettier --write .",
    "test": "vitest",
    "serve": "serve -s dist",
    "sync": "node scripts/sync-from-browser.cjs",
    "fetch:newsfeeds": "node scripts/fetch-from-newsfeeds.cjs",
    "merge:newsfeeds": "node scripts/merge-newsfeeds.cjs",
    "pull:newsfeeds": "npm run fetch:newsfeeds && npm run merge:newsfeeds && npm run sitemap && npm run feeds",
    "sitemap": "node scripts/generate-sitemap.js",
    "rss": "node scripts/generate-rss.js",
    "json-feed": "node scripts/generate-json-feed.js",
    "opml": "node scripts/generate-opml.js",
    "feeds": "npm run rss && npm run json-feed && npm run opml",
    "prebuild": "npm run sitemap && npm run feeds",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "archive:migrate": "node scripts/migrate-to-archive.cjs",
    "activitypub:setup": "node scripts/setup-activitypub.cjs",
    "activitypub:status": "node scripts/activitypub-status.cjs",
    "activitypub:deliver": "node scripts/deliver-links.cjs"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^8.51.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "feed": "^4.2.2",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "postcss": "^8.4.27",
    "prettier": "^3.7.4",
    "puppeteer": "^24.32.0",
    "serve": "^14.2.5",
    "tailwindcss": "^3.3.3",
    "vite": "^6.4.1",
    "vitest": "^3.2.4"
  }
}
